s = tf('s');
Kp = 0.1;
Ki = 10;
Kd = 1;

PI = Kp+Ki/s

%H_c = K_t / ( (K_t*K_e) + (R) * (J*s + B) );

H_c = 2.5/(s*0.08+1)

system_o = H_c*PI;

system = (PI*H_c)/(1+H_c*PI);

%bode(H_c*PI);
Control_s = stepinfo(system);
Motor_s = stepinfo(H_c);

Control_s.RiseTime;
Motor_s.RiseTime;

hold on
%bode(system);
%bode(H_c)
hold off
grid on